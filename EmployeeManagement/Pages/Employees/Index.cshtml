@page
@model EmployeeManagement.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Employees</h1>

<div class="card-deck">
    @foreach(var employee in Model.Employees)
    {
        var photopath = "~/images/" + (employee.Photopath ?? "noimage.png");

    <div class="card m-3" style="min-width : 18rem; max-width:30.5%">
        <div class="card-header">
            <h3>@employee.Name</h3>
        </div>

        <img class="card-img-top imageThumbnail" src="@photopath" 
             asp-append-version="true" />

        <div class="card-footer text-center">
            <a asp-page="/Employees/details" class="btn btn-primary m-1" asp-route-Id="@employee.Id">View</a>
            <a asp-page="/Employees/edit" class="btn btn-primary m-1" asp-route-Id="@employee.Id">Edit</a>
            <a href="#" class="btn btn-danger m-1">Delete</a>

        </div>

    </div>
    }

</div>
